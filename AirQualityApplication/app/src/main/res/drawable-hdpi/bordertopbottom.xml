<?xml version="1.0" encoding="utf-8"?>
<!--http://stackoverflow.com/questions/1598119/is-there-an-easy-way-to-add-a-border-to-the-top-and-bottom-of-an-android-view -->
<!--http://stackoverflow.com/questions/5976805/android-linearlayout-gradient-background-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle">
            <stroke android:width="4dp" android:color="#FFFFD700" />
            <!--<solid android:color="#FF064000" />-->
            <gradient
                android:angle="90"
                android:startColor="#FF064000"
                android:endColor="#FF0C7F00"
                android:type="linear"></gradient>

        </shape>
    </item>

    <item android:top="4dp" android:bottom="4dp">
        <shape
            android:shape="rectangle">
            <stroke android:width="0dp" android:color="#FF064000" />
            <gradient
                android:angle="90"
                android:startColor="#FF064000"
                android:endColor="#FF0C7F00"
                android:type="linear"></gradient>
            <!--<solid android:color="#00000000" />-->
        </shape>
    </item>

</layer-list>